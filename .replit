modules = ["java-graalvm22.3"]
run = "mvn spring-boot:run"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "java -jar target/gemini-chat-0.0.1-SNAPSHOT.jar"]
build = ["sh", "-c", "mvn clean package -DskipTests"]

[[ports]]
localPort = 8080
externalPort = 80

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 40401235
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mvn spring-boot:run"
